<!doctype html>
<html lang="en" ng-app="nutritionApp">
<head>
    <meta charset="utf-8">
    <title>Nutritions</title>
    @Styles.Render("~/Content/css")
    <script src="//angular.github.io/angular-phonecat/step-2/app/bower_components/angular/angular.js"></script>
    <script src="/scripts/foods.js"></script>
</head>
<body ng-controller="nutrition">
    Search: <input ng-model="query">
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <td>Name</td>
                <td>Fat</td>
                <td>Fat %</td>
                <td>Carb</td>
                <td>Carb %</td>
                <td>Protien</td>
                <td>Protien %</td>
                <td>Calories per 100g</td>
                <td>Grams</td>
            </tr>
        </thead>
        <tr ng-repeat="food in foods | filter:query">
            <td>{{food.Name}}</td>
            <td>{{food.Fat}}</td>
            <td>{{(food.Fat /(food.Fat + food.Carb + food.Protien)) * 100}}%</td>
            <td>{{food.Carb}}</td>
            <td>{{(food.Carb /(food.Fat + food.Carb + food.Protien)) * 100}}%</td>
            <td>{{food.Protien}}</td>
            <td>{{(food.Protien /(food.Fat + food.Carb + food.Protien)) * 100}}%</td>
            <td>{{food.CalPerHundred}}</td>
            <td>100</td>
        </tr>
    </table>
</body>
</html>